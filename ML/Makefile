MAIN := gallifrey
OBJS := ast.cmo lexer.cmo parser.cmo pprint.cmo eval.cmo main.cmo

%.cmo: %.ml
	ocamlfind ocamlc -thread -package core -c $<

%.cmi: %.mli
	ocamlfind ocamlc -thread -package core -c $<

$(MAIN): $(OBJS)
	ocamlfind ocamlc -thread -package core -o $@ $^

lexer.ml: lexer.mll
	ocamllex -q $<

parser.ml: parser.mly
	ocamlyacc -q -v $<

parser.mli: parser.mly
	ocamlyacc -q -v $<

clean:
	rm -f *.cmo *.cmi lexer.ml parser.ml parser.mli $(MAIN)

# Dependencies generated by `ocamldep -bytecode *.mli *.ml`.
ast.cmo :
eval.cmo : ast.cmo
lexer.cmo : parser.cmi
main.cmo : parser.cmi lexer.cmo eval.cmo
parser.cmo : ast.cmo parser.cmi
parser.cmi : ast.cmo
pprint.cmo : ast.cmo
